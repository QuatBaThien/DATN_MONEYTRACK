<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

        <ImageView
            android:id="@+id/iv_category_icon"
            android:layout_width="45dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_category"
            app:layout_constraintBottom_toBottomOf="@+id/tv_category_amount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@id/iv_category_icon"
            android:text="An uong"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/iv_category_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_category_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iv_category_icon"
            android:text="123321"
            app:layout_constraintStart_toStartOf="@+id/tv_category_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_category_name" />

        <TextView
            android:id="@+id/tv_precent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="44%"
            android:textSize="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/red"
            app:layout_constraintBottom_toBottomOf="@+id/iv_category_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_category_icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
